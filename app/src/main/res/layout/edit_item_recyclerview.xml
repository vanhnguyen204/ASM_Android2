<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/custom_recyclerview"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/products" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nameOfProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten san pham"
            android:textColor="#EF0500"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_price_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia and so luong"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa"
                android:textColor="#E20702" />

            <TextView
                android:id="@+id/txtDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Xoá"
                android:textColor="#0A8DFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>