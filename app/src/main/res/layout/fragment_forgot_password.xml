<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_forgot_pass"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".FragmentForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lấy lại mật khẩu "
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#09800E"
        android:layout_marginBottom="16dp"
        />
    <EditText
        android:id="@+id/edtUserNameFG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edt"
        android:hint="Nhập tên tài khoản"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:id="@+id/btnConfirmFP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btnlogin"
        android:text="Xác nhận" />

</LinearLayout>